{
  "name": "simple_sequential_workflow",
  "description": "简单的顺序工作流示例",
  "version": 1,
  "tasks": [
    {
      "name": "fetch_user_data",
      "taskReferenceName": "fetch_user_ref",
      "type": "HTTP",
      "inputParameters": {
        "http_request": {
          "uri": "https://api.example.com/users/${workflow.input.userId}",
          "method": "GET"
        }
      }
    },
    {
      "name": "transform_data",
      "taskReferenceName": "transform_ref",
      "type": "JSON_JQ_TRANSFORM",
      "inputParameters": {
        "data": "${fetch_user_ref.output.response.body}",
        "queryExpression": ".user | {id, name, email}"
      }
    },
    {
      "name": "send_notification",
      "taskReferenceName": "notify_ref",
      "type": "SIMPLE",
      "inputParameters": {
        "userId": "${transform_ref.output.id}",
        "message": "User data processed successfully"
      }
    }
  ],
  "inputParameters": ["userId"],
  "outputParameters": {
    "result": "${notify_ref.output}"
  },
  "schemaVersion": 2,
  "ownerEmail": "team@example.com"
}
